<Window x:Class="AdvancedAlphabetEncryption.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedAlphabetEncryption"
        xmlns:viewmodel="clr-namespace:AdvancedAlphabetEncryption.ViewModels"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="400">

    <Window.Resources>
        <viewmodel:LoginViewModel x:Key="LoginViewModel" />
    </Window.Resources>
    
    <Grid>
        <StackPanel Margin="20">
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="200" DataContext="{Binding Source={StaticResource LoginViewModel}}">
                <TextBlock Text="Login to your account" FontSize="18" Margin="0, 0, 0, 60" HorizontalAlignment="Center"/>
                <TextBlock Text="Email"/>
                <TextBox Margin="0, 0, 0, 10" Text="{Binding Email}"/>
                <TextBlock Text="Password" />
                <PasswordBox Name="passwordBox" Margin="0, 0, 0, 30" />
                <Button Content="Login" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
